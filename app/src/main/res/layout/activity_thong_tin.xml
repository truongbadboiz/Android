<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Company Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công ty TNHH Thực Phẩm Chen Lin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="4dp" />

        <!-- Company Name in English -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chen Lin Food Co., Ltd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="4dp" />

        <!-- Company Name in Chinese -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="槿林食品公司"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="16dp" />

        <!-- Company History and Milestones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm 2002: Tiền thân là nhà hàng Lẩu và Nướng Không Khói 'đầu tiên' mang thương hiệu CHEN tại TP. Hồ Chí Minh."
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm 2003: Công ty TNHH Thực Phẩm Chen Lin được thành lập với mục tiêu ban đầu là phát triển chuỗi nhà hàng Chen."
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm 2012: Bắt đầu sản xuất các sản phẩm là thực phẩm đông lạnh đóng gói mang thương hiệu ‘CHEN’ phục vụ cho chuỗi nhà hàng Chen và khách hàng nội bộ."
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm 2017: Mở rộng hệ thống phân phối sản phẩm ra thị trường bên ngoài."
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm 2019: Thành lập và mở rộng các cửa hàng ăn uống và phân phối sản phẩm Chen Food trong các trung tâm thương mại lớn."
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="16dp" />

        <!-- Image of Chen Restaurant -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/chen_restaurant_image"
            android:contentDescription="Chen Restaurant Image"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:paddingBottom="16dp" />

        <!-- Introduction and Customer Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kính chào quý khách hàng: Chúng tôi cũng cung cấp nhiều loại sản phẩm với các gói và kích cỡ khác nhau để phù hợp với các dịp và nhu cầu khác nhau. Sản phẩm của chúng tôi không chỉ được đảm bảo về chất lượng mà còn có giá cả hợp lý, mang đến cho bạn nhiều giá trị và sự hài lòng hơn. Xin cảm ơn quý khách hàng đã quan tâm và tin tưởng công ty chúng tôi, rất mong được hợp tác với quý khách hàng. Trân trọng kính chào !"
            android:textColor="#333333"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Contact Information and Social Media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingBottom="16dp">

            <!-- Company Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THÔNG TIN CÔNG TY"

                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ: 205/E Ấp 2, Phường Hội Nghĩa, Thành phố Tân Uyên, Tỉnh Bình Dương, Việt Nam"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VPDD: Số 9, Đường số 2, Hưng Gia 1, Phường Tân Phong, Quận 7, TP.Hồ Chí Minh >> (Bản đồ/Map)"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tel: (0274) 3648 918 – (0274) 3648 919"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: www.chenlin.vn - Email: cttu@chenlin.vn"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MST: 0302910171"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

            </LinearLayout>

            <!-- Customer Support -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HỖ TRỢ KHÁCH HÀNG"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới thiệu"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hệ thống cửa hàng Chen Food"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hướng dẫn đặt hàng"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chính sách giao hàng"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chính sách bảo mật"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>


            <!-- Social Media Links -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MẠNG XÃ HỘI"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/facebook"
                        android:paddingEnd="8dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/youtobe"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright 2024 © Công ty TNHH Thực phẩm Chenlin. Thiết kế website OSG.VN"
            android:textColor="#ffffff"
            android:background="#8B0000"
            android:gravity="center"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
